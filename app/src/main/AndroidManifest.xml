<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hefesto.biblioteca">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Biblioteca">
        <activity android:name="com.tap.biblioteca.PedidosReservas" android:parentActivityName="com.tap.biblioteca.Emprestimos"></activity>
        <activity
            android:name="com.tap.biblioteca.DadosLivro"
            android:parentActivityName="com.tap.biblioteca.Home" />
        <activity
            android:name="com.tap.biblioteca.DadosUsuario"
            android:parentActivityName="com.tap.biblioteca.Home" />
        <activity
            android:name="com.tap.biblioteca.MeusEmprestimos"
            android:parentActivityName="com.tap.biblioteca.Home" />
        <activity
            android:name="com.tap.biblioteca.Emprestimos"
            android:parentActivityName="com.tap.biblioteca.MeusEmprestimos" />
        <activity
            android:name="com.tap.biblioteca.CadastrarLivro"
            android:parentActivityName="com.tap.biblioteca.Home" />
        <activity android:name="com.tap.biblioteca.Home" />
        <activity
            android:name="com.tap.biblioteca.Cadastrar"
            android:parentActivityName="com.tap.biblioteca.MainActivity" />
        <activity android:name="com.tap.biblioteca.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>